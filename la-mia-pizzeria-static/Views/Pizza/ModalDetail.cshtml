@model Pizza
@if(Model != null)
{
    <div class="modal-header">
        <h5 class="modal-title">@Model.Name</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <img class="ms-modal-img m-auto d-block rounded-3" src="@Model.UrlImage" alt="@Model.Name">
        <ul class="list-unstyled">
            <li>
                <strong>Categoria: </strong>@if (Model.Category != null)
                {
                    <span>@Model.Category.Name</span>
                }
                else
                {
                    <span>Nessuna categoria associata</span>
                }
            </li>
            <li>
                <p>
                    <strong>Ingredienti: </strong>@if (Model.Ingredients != null && Model.Ingredients.Count > 0)
                    {
                        @foreach (Ingredient ingredient in Model.Ingredients)
                        {
                            @if (!(ingredient == Model.Ingredients.Last()))
                            {
                                <span>@ingredient.Name, </span>
                            }
                            else
                            {
                                <span>@ingredient.Name</span>
                            }
                        }
                    }
                    else
                    {
                        <span>Nessun ingrediente associato.</span>
                    }
                </p>
            </li>
            <li>
                <strong>Prezzo: @Model.Price €</strong>
            </li>
            <li>
                <p>
                    <strong>Descrizione: </strong>@Model.Description
                </p>
            </li>
        </ul>
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Chiudi</button>
        <button type="button" class="btn btn-sm btn-success">Aggiungi al carrello</button>
    </div>
} else
{
    <div class="modal - header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <h2 class="p-5 text-center">Pizza non trovata.</h2>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
    </div>
}